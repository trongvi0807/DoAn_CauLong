@model DoAn_CauLong.ViewModels.ProductDetailViewModel
@using DoAn_CauLong.Models
@using Newtonsoft.Json

@{
    ViewBag.Title = Model.SanPham.TenSanPham;

    // Lấy biến thể đầu tiên để thiết lập mặc định
    var defaultVariant = Model.Variants.FirstOrDefault();

    // Khởi tạo các giá trị mặc định an toàn
    decimal defaultPriceValue = defaultVariant?.GiaBan ?? Model.SanPham.GiaGoc ?? 0;
    int defaultChiTietId = defaultVariant?.MaChiTiet ?? 0;
    int defaultSoLuongTon = defaultVariant?.SoLuongTon ?? 0;

    // Lấy URL hình ảnh đại diện mặc định (ưu tiên ảnh biến thể nếu có)
    string mainImageUrl = "/Content/images/" + (Model.SanPham.HinhAnhDaiDien ?? "default.jpg");
    string defaultImage = "/Content/images/" + (defaultVariant?.HinhAnh ?? Model.SanPham.HinhAnhDaiDien ?? "default.jpg");

    // Lấy thông số vợt
    var thongSoVot = defaultVariant?.ThongSoVots?.FirstOrDefault();
    bool isRacket = Model.SanPham.LoaiSanPham?.MaLoai == 1 || thongSoVot != null; // Giả định MaLoai 1 là Vợt

    // ✅ QUAN TRỌNG: Serialze dữ liệu biến thể thành JSON cho JavaScript
    var variantJsonData = Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(
        Model.Variants.Select(v => new
        {
            MaChiTiet = v.MaChiTiet,
            MaMau = v.MauSac?.MaMau,
            MaSize = v.Size?.MaSize,
            GiaBan = v.GiaBan,
            SoLuongTon = v.SoLuongTon,
            HinhAnh = v.HinhAnh
        })
    ));
}

<style>
    /* ---------------------------------- */
    /* CSS CỐ ĐỊNH CHO BỐ CỤC 4/10 VÀ 6/10 */
    /* ---------------------------------- */
    .product-container {
        display: flex;
        max-width: 1200px;
        margin: 20px auto;
        gap: 40px;
    }

    /* Cột Media chiếm 4/10 (40%) */
    .media-column {
        flex: 4; /* Tỷ lệ 4 trên tổng 10 */
        max-width: 40%;
        text-align: center;
    }

    /* Cột Thông tin chính chiếm 6/10 (60%) */
    .info-column {
        flex: 6; /* Tỷ lệ 6 trên tổng 10 */
        max-width: 60%;
    }

    /* Bố cục ảnh chính */
    .main-image-box {
        position: relative;
        padding-bottom: 75%; /* Tỷ lệ khung hình 4:3 */
        height: 0;
        overflow: hidden;
        margin-bottom: 10px;
        border: 1px solid #eee;
        border-radius: 8px;
    }

        .main-image-box img {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            object-fit: contain;
            background-color: #f9f9f9;
        }

    /* Khối thông tin chi tiết full width dưới cùng */
    .detail-section-full {
        max-width: 1200px;
        margin: 30px auto;
        padding-top: 20px;
        border-top: 1px solid #ddd;
    }

    /* Nâng cấp UI Tùy chọn */
    .option-selection h4 {
        font-size: 16px;
        margin-top: 15px;
        margin-bottom: 10px;
        font-weight: 600;
    }

    .option-group {
        display: flex;
        gap: 10px;
        flex-wrap: wrap;
    }

        .option-group button {
            padding: 8px 15px;
            border: 1px solid #ccc;
            border-radius: 4px;
            background-color: #f9f9f9;
            cursor: pointer;
            transition: all 0.2s;
        }

            .option-group button.selected {
                border-color: #f36f21;
                background-color: #fff4ed;
                font-weight: bold;
                box-shadow: 0 0 5px rgba(243, 111, 33, 0.5);
            }

    .price-block {
        margin: 20px 0;
        border: 1px solid #f36f21;
        border-radius: 8px;
        padding: 15px;
        background-color: #fffaf7;
    }

        .price-block .price {
            font-size: 32px;
            color: #f36f21;
            font-weight: bold;
            margin: 0;
            display: inline-block;
        }

        .price-block .old-price {
            font-size: 18px;
            color: #888;
            text-decoration: line-through;
            margin-left: 15px;
        }

    /* Nút hành động */
    .btn-action {
        padding: 12px 25px;
        font-size: 16px;
        margin-right: 15px;
        border: none;
        border-radius: 6px;
        cursor: pointer;
    }

    .btn-add-cart {
        background-color: #fff;
        border: 1px solid #f36f21;
        color: #f36f21;
    }

    .btn-buy-now {
        background-color: #f36f21;
        color: #fff;
    }

    .btn-action:disabled {
        opacity: 0.6;
        cursor: not-allowed;
    }

    .rating-stars {
        color: gold;
    }

    /* Thông số vợt */
    .racket-specs-table th {
        background-color: #e9ecef;
        width: 40%;
    }

    .racket-specs-table th, .racket-specs-table td {
        padding: 10px;
        border: 1px solid #dee2e6;
        text-align: left;
    }

    .racket-specs-table {
        border: none;
    }
</style>


<div class="product-container">

    <div class="media-column">
        <div class="main-image-box">
            <img id="main-product-image" src="@Url.Content(defaultImage)" alt="@Model.SanPham.TenSanPham">
        </div>
    </div>

    <div class="info-column">

        <h1>@Model.SanPham.TenSanPham</h1>
        <hr>

        <div class="rating">
            <span class="rating-stars">
                @for (int i = 0; i < (int)Math.Round(Model.AverageRating); i++)
                {<span>★</span>}
            </span>
            <span>@Model.AverageRating.ToString("F1") sao</span>
            <span>| @Model.ReviewCount đánh giá</span>
        </div>

        <button class="btn-review-action" onclick="alert('Chức năng gửi đánh giá sẽ được thêm tại đây.')">
            Gửi đánh giá của bạn
        </button>

        <div class="price-block">
            <span class="price" id="display-price">
                @defaultPriceValue.ToString("N0") đ
            </span>
            @if (Model.SanPham.GiaGoc.HasValue && Model.SanPham.GiaGoc.Value > defaultPriceValue)
            {
                <span class="old-price">
                    <del>@Model.SanPham.GiaGoc.Value.ToString("N0") đ</del>
                </span>
            }
        </div>

        <hr>

        @if (Model.AvailableColors.Any())
        {
            <div class="option-selection">
                <h4>Chọn Màu Sắc:</h4>
                <div class="option-group" id="color-options" data-option-type="color">
                    @foreach (var color in Model.AvailableColors.OrderBy(c => c.TenMau))
                    {
                        <button type="button" data-option-id="@color.MaMau" data-value="@color.TenMau">@color.TenMau</button>
                    }
                </div>
            </div>
        }

        @if (Model.AvailableSizes.Any())
        {
            <div class="option-selection">
                <h4>Chọn Trọng lượng/Size:</h4>
                <div class="option-group" id="size-options" data-option-type="size">
                    @foreach (var size in Model.AvailableSizes.OrderBy(s => s.TenSize))
                    {
                        <button type="button" data-option-id="@size.MaSize" data-value="@size.TenSize">@size.TenSize</button>
                    }
                </div>
            </div>
        }

        <hr>

        @using (Html.BeginForm("AddToCart", "Home", FormMethod.Post, new { id = "addToCartForm" }))
        {
            @* Hidden field để lưu ID biến thể ĐÃ CHỌN *@
            <input type="hidden" id="selected-chitiet-id" name="chiTietId" value="@defaultChiTietId">

            <div class="quantity-control">
                Số lượng:
                <input type="number" name="quantity" id="quantity-input" value="1" min="1" max="99" class="form-control" style="width: 60px; margin-left: 10px; display: inline-block;">
                <span id="stock-status" style="margin-left: 15px; font-weight: bold;"></span>
            </div>

            <div style="margin-top: 20px;">
                <button type="submit" class="btn-action btn-add-cart" id="btn-add-cart">
                    <i class="fa-solid fa-cart-plus"></i> Thêm vào giỏ
                </button>
                <button type="button" class="btn-action btn-buy-now" id="btn-buy-now">
                    <i class="fa-solid fa-bolt"></i> Mua ngay
                </button>
            </div>
        }
    </div>
</div>

<div class="detail-section-full">

    @if (isRacket && thongSoVot != null)
    {
        <h3>Thông số chi tiết Vợt</h3>
        <table class="racket-specs-table">
            <tbody>
                <tr><th>Hãng</th><td>@Model.SanPham.Hang?.TenHang</td></tr>
                <tr><th>Độ cứng</th><td>@thongSoVot.DoCung</td></tr>
                <tr><th>Điểm cân bằng</th><td>@thongSoVot.DoCanBang</td></tr>
                <tr><th>Sức căng</th><td>@thongSoVot.SucCang</td></tr>
                <tr><th>Trọng lượng</th><td>@thongSoVot.TrongLuong</td></tr>
                <tr><th>Chiều dài</th><td>@thongSoVot.ChieuDai</td></tr>
            </tbody>
        </table>
    }

    <h3>Đánh giá Khách hàng (@Model.ReviewCount)</h3>
    <p>Chi tiết các bình luận của khách hàng sẽ được tải ở đây.</p>
</div>

@section scripts {
    <script>
        // ✅ DỮ LIỆU BIẾN THỂ TỪ SERVER
        const allVariants = @variantJsonData;

        // Khởi tạo các ID được chọn (Mặc định là null nếu có tùy chọn, để bắt buộc chọn)
        let selectedColorId = @(Model.AvailableColors.Any() ? (object)null : (object)null);
        let selectedSizeId = @(Model.AvailableSizes.Any() ? (object)null : (object)null);

        // Tham chiếu đến các phần tử UI
        const hiddenIdInput = document.getElementById('selected-chitiet-id');
        const stockElement = document.getElementById('stock-status');
        const priceElement = document.getElementById('display-price');
        const mainProductImage = document.getElementById('main-product-image');
        const btnAddCart = document.getElementById('btn-add-cart');

        const mainDefaultImage = '@mainImageUrl';
        const defaultPriceValue = @defaultPriceValue;
        const defaultSoLuongTon = @defaultSoLuongTon;

        // Hàm format tiền tệ VNĐ
        const formatCurrency = (amount) => {
            return amount.toLocaleString('vi-VN') + 'đ';
        };

        // Hàm chính: Cập nhật giá, tồn kho, và ID chi tiết sản phẩm
        function updateProductState() {
            let foundVariant = null;
            let finalPrice = defaultPriceValue;
            let finalStock = defaultSoLuongTon;
            let finalChiTietId = @defaultChiTietId;
            let finalImage = mainDefaultImage;

            // Kiểm tra xem sản phẩm có yêu cầu chọn tùy chọn không
            let requiredColor = @(Model.AvailableColors.Count > 0 ? "true" : "false");
            let requiredSize = @(Model.AvailableSizes.Count > 0 ? "true" : "false");

            let selectionMissing = (requiredColor && selectedColorId === null) ||
                                   (requiredSize && selectedSizeId === null);

            // 1. Tìm biến thể phù hợp
            if (!selectionMissing) {
                foundVariant = allVariants.find(v =>
                    (!requiredColor || v.MaMau === selectedColorId) &&
                    (!requiredSize || v.MaSize === selectedSizeId)
                );
            }

            // 2. Cập nhật trạng thái dựa trên biến thể tìm thấy
            if (foundVariant) {
                finalPrice = foundVariant.GiaBan;
                finalStock = foundVariant.SoLuongTon;
                finalChiTietId = foundVariant.MaChiTiet;
                finalImage = foundVariant.HinhAnh ? `/Content/images/${foundVariant.HinhAnh}` : mainDefaultImage;
            }

            // 3. Cập nhật UI
            priceElement.textContent = formatCurrency(finalPrice);
            hiddenIdInput.value = finalChiTietId;
            mainProductImage.src = finalImage;

            // Cập nhật trạng thái tồn kho và nút
            if (selectionMissing) {
                stockElement.textContent = 'Vui lòng chọn đủ tùy chọn';
                stockElement.style.color = 'red';
                btnAddCart.disabled = true;
            } else if (finalStock > 0) {
                stockElement.textContent = `Còn hàng (${finalStock})`;
                stockElement.style.color = 'green';
                btnAddCart.disabled = false;
            } else {
                stockElement.textContent = 'Hết hàng';
                stockElement.style.color = 'red';
                btnAddCart.disabled = true;
            }
        }

        // Xử lý logic khi click chọn tùy chọn
        document.querySelectorAll('.option-group button').forEach(button => {
            button.addEventListener('click', function(e) {
                e.preventDefault();
                const group = this.closest('.option-group');

                group.querySelectorAll('button').forEach(btn => btn.classList.remove('selected'));
                this.classList.add('selected');

                const optionType = group.dataset.optionType;
                const optionId = parseInt(this.dataset.optionId);

                // Cập nhật ID được chọn
                if (optionType === 'color') {
                    selectedColorId = optionId;
                } else if (optionType === 'size') {
                    selectedSizeId = optionId;
                }

                updateProductState();
            });
        });

        // Xử lý nút Mua ngay
        document.getElementById('btn-buy-now').addEventListener('click', function() {
            if (btnAddCart.disabled) {
                alert('Vui lòng chọn tùy chọn hợp lệ và đảm bảo sản phẩm còn hàng.');
                return;
            }
            // Chuyển hành động Mua ngay thành hành động Thêm vào giỏ hàng và gửi form
            document.getElementById('addToCartForm').submit();
        });

        // --- Khởi tạo ---
        // Giả lập click để thiết lập trạng thái ban đầu cho các tùy chọn
        if (@(Model.AvailableColors.Count > 0 ? "true" : "false")) {
             document.querySelector('#color-options button:first-child')?.click();
        }
        if (@(Model.AvailableSizes.Count > 0 ? "true" : "false")) {
            document.querySelector('#size-options button:first-child')?.click();
        }

        // Nếu không có bất kỳ tùy chọn nào, chỉ cần gọi updateState() để thiết lập giá trị mặc định
        if (@(Model.AvailableColors.Count == 0 && Model.AvailableSizes.Count == 0 ? "true" : "false")) {
             updateProductState();
        }

    </script>
}