@model DoAn_CauLong.ViewModels.ProductDetailViewModel
@using DoAn_CauLong.Models

@{
    ViewBag.Title = Model.SanPham.TenSanPham;

    // 1. Lấy thông tin cơ bản của sản phẩm & biến thể mặc định
    var defaultVariant = Model.Variants.FirstOrDefault();
    // Giá gốc để tính toán (Ưu tiên giá biến thể, nếu không có lấy giá gốc SP)
    decimal originalPrice = defaultVariant?.GiaBan ?? Model.SanPham.GiaGoc ?? 0m;
    int defaultChiTietId = defaultVariant?.MaChiTiet ?? 0;

    string mainImageUrl = "/Content/images/" + (Model.SanPham.HinhAnhDaiDien ?? "default.jpg");
    var thongSoVot = Model.ThongSoVot;
    bool isRacket = thongSoVot != null;

    // 2. LOGIC TÍNH KHUYẾN MÃI (Bao gồm kiểm tra hạn & giảm tối đa)
    decimal discountPercent = 0;
    decimal maxDiscount = 0; // Biến lưu số tiền giảm tối đa
    bool isActivePromo = false;
    var km = Model.SanPham.KhuyenMai;

    if (km != null)
    {
        DateTime now = DateTime.Now;
        DateTime? start = km.NgayBatDau;
        DateTime? end = km.NgayKetThuc;

        // Xử lý lỗi 00:00:00 (cho phép hết ngày)
        if (end.HasValue && end.Value.TimeOfDay == TimeSpan.Zero)
        {
            end = end.Value.Date.AddDays(1).AddTicks(-1);
        }

        // Kiểm tra thời hạn
        if ((start == null || start <= now) && (end == null || end >= now))
        {
            isActivePromo = true;
            discountPercent = km.PhanTramGiam ?? 0;
            maxDiscount = km.GiamToiDa ?? 0;
        }
    }

    // 3. Tính giá hiển thị lần đầu (Server-side render)
    decimal discountAmount = 0;
    decimal discountedPrice = originalPrice;

    if (isActivePromo && discountPercent > 0)
    {
        // Tính tiền giảm theo %
        discountAmount = originalPrice * (discountPercent / 100);

        // Kiểm tra trần giảm giá
        if (maxDiscount > 0 && discountAmount > maxDiscount)
        {
            discountAmount = maxDiscount;
        }

        discountedPrice = Math.Max(0, originalPrice - discountAmount);
    }
}

<style>
    /* CSS Giữ nguyên nhưng tinh chỉnh lại cho gọn */
    .product-container {
        display: flex;
        max-width: 1200px;
        margin: 30px auto;
        gap: 40px;
        padding: 0 15px;
        background: #fff;
        border-radius: 8px;
    }

        .product-container h1 {
            font-size: 28px;
            font-weight: 700;
            margin-top: 0;
            margin-bottom: 10px;
        }

    .media-column {
        flex: 1.5;
        padding: 20px 0;
        text-align: center;
    }

    .info-column {
        flex: 1;
        padding: 20px 0;
    }

    .main-image-box {
        position: relative;
        padding-bottom: 75%;
        height: 0;
        overflow: hidden;
        margin-bottom: 20px;
        border: 1px solid #ddd;
        border-radius: 4px;
    }

        .main-image-box img {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            object-fit: contain;
            background-color: #fcfcfc;
        }

    .rating {
        display: flex;
        align-items: center;
        gap: 15px;
        margin-bottom: 15px;
        color: #666;
        font-size: 14px;
    }

    .rating-stars {
        color: #ffc107;
        font-size: 18px;
    }

    .price-box {
        padding: 15px 20px;
        background-color: #fef0e9;
        border-radius: 4px;
        margin: 20px 0;
        display: flex;
        align-items: center;
    }

    .price {
        font-size: 32px;
        color: #f36f21;
        font-weight: 700;
    }

    .original-price {
        text-decoration: line-through;
        color: #9e9e9e;
        margin-left: 15px;
        font-size: 20px;
        font-weight: 400;
    }

    .discount-badge {
        background-color: #f36f21;
        color: white;
        padding: 4px 8px;
        border-radius: 4px;
        font-size: 14px;
        margin-left: 15px;
        font-weight: bold;
    }

    .option-selection h4 {
        font-size: 16px;
        font-weight: 600;
        margin-bottom: 10px;
    }

    .option-group {
        display: flex;
        flex-wrap: wrap;
        gap: 10px;
        margin-bottom: 20px;
    }

        .option-group button {
            border: 1px solid #ddd;
            padding: 8px 15px;
            border-radius: 4px;
            cursor: pointer;
            background-color: #fff;
            transition: all 0.2s;
        }

            .option-group button:hover {
                border-color: #f36f21;
            }

            .option-group button.selected {
                border-color: #f36f21;
                background-color: #fff4ed;
                font-weight: 600;
                color: #f36f21;
            }

    .btn-action {
        padding: 15px 30px;
        font-size: 18px;
        margin-right: 15px;
        border: none;
        border-radius: 8px;
        cursor: pointer;
        transition: background-color 0.2s;
    }

    .btn-add-cart {
        background-color: #fff;
        border: 2px solid #f36f21;
        color: #f36f21;
    }

        .btn-add-cart:hover {
            background-color: #f36f21;
            color: #fff;
        }

    .btn-buy-now {
        background-color: #f36f21;
        color: #fff;
    }

        .btn-buy-now:hover {
            background-color: #d15d18;
        }

    .quantity-control {
        margin: 20px 0;
        display: flex;
        align-items: center;
        gap: 15px;
    }

        .quantity-control input {
            text-align: center;
            padding: 5px;
            border: 1px solid #ddd;
            border-radius: 4px;
            width: 60px;
        }

    .racket-specs-table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 15px;
        font-size: 15px;
        border: 1px solid #eee;
    }

        .racket-specs-table th, .racket-specs-table td {
            padding: 12px;
            border: none;
            border-bottom: 1px solid #eee;
            text-align: left;
        }

        .racket-specs-table th {
            background-color: #f9f9f9;
            font-weight: 600;
            width: 40%;
            color: #333;
        }

    .btn-review-action {
        display: inline-block;
        background-color: #28a745;
        color: #fff;
        padding: 10px 18px;
        border-radius: 4px;
        cursor: pointer;
        font-size: 15px;
        margin-top: 15px;
        text-align: center;
        text-decoration: none;
    }

        .btn-review-action:hover {
            background-color: #218838;
            color: #fff;
        }

    .review-list {
        margin-top: 20px;
    }

    .review-box {
        border: 1px solid #f0f0f0;
        border-radius: 4px;
        padding: 15px;
        margin-bottom: 10px;
        background-color: #fcfcfc;
    }

        .review-box strong {
            display: block;
            margin-bottom: 5px;
            font-size: 15px;
        }

        .review-box p {
            margin: 5px 0;
        }

        .review-box small {
            color: #999;
            font-size: 12px;
        }
</style>

<div class="product-container">
    <div class="media-column">
        <div class="main-image-box">
            <img id="main-product-image" src="@mainImageUrl" alt="@Model.SanPham.TenSanPham">
        </div>
    </div>

    <div class="info-column">
        <h1>@Model.SanPham.TenSanPham</h1>
        <hr />

        <div class="rating">
            <span class="rating-stars">
                @for (int i = 0; i < (int)Math.Round(Model.AverageRating); i++)
                {<span>★</span>}
            </span>
            <span>@Model.AverageRating.ToString("F1") sao</span>
            <span>| @Model.ReviewCount đánh giá</span>
        </div>

        @if (Session["MaKH"] != null)
        {
            <a href="@Url.Action("ReviewForm", "ThemPhanHoiSP", new { maSP = Model.SanPham.MaSanPham })" class="btn-review-action">Gửi đánh giá của bạn</a>
        }
        else
        {
            <p style="margin-top:15px; color:#f36f21;">Bạn cần đăng nhập để gửi đánh giá.</p>
        }

        <div class="price-box">
            <span class="price" id="display-price">
                @if (isActivePromo && discountAmount > 0)
                {
                    @discountedPrice.ToString("N0")@:đ <span class="original-price">@originalPrice.ToString("N0")đ</span>
                }
                else
                {
                    @originalPrice.ToString("N0")@:đ
                }
            </span>

            @if (isActivePromo && discountAmount > 0)
            {
                <span class="discount-badge" id="discount-badge">
                    @* Logic hiển thị badge lần đầu *@
                    @if (maxDiscount > 0 && discountAmount >= maxDiscount)
                    {
                        @:-@maxDiscount.ToString("N0")đ (Max)
                    }
                    else
                    {
                        @:-@discountPercent.ToString("0")%
                    }
                </span>
            }
        </div>

        <hr>

        @if (Model.AvailableColors.Any())
        {
            <div class="option-selection">
                <h4>Chọn Màu Sắc:</h4>
                <div class="option-group" id="color-options" data-option="color">
                    @foreach (var color in Model.AvailableColors)
                    {
                        <button data-color-id="@color.MaMau" data-value="@color.TenMau">@color.TenMau</button>
                    }
                </div>
            </div>
        }

        @if (Model.AvailableSizes.Any())
        {
            <div class="option-selection">
                <h4>Chọn Trọng lượng/Size:</h4>
                <div class="option-group" id="weight-options" data-option="size">
                    @foreach (var size in Model.AvailableSizes)
                    {
                        <button data-size-id="@size.MaSize" data-value="@size.TenSize">@size.TenSize</button>
                    }
                </div>
            </div>
        }

        @using (Html.BeginForm("AddToCart", "Home", FormMethod.Post))
        {
            <input type="hidden" id="selected-chitiet-id" name="chiTietId" value="@defaultChiTietId">

            <div class="quantity-control">
                <span>Số lượng:</span>
                <input type="number" name="quantity" id="quantity-input" value="1" min="1" max="999">
                <span id="stock-status" style="margin-left: 15px;">Vui lòng chọn tùy chọn</span>
            </div>

            <div style="margin-top: 25px;">
                <button type="submit" class="btn-action btn-add-cart">
                    <i class="fas fa-shopping-cart"></i> Thêm vào giỏ
                </button>
                <button type="submit" class="btn-action btn-buy-now">Mua ngay</button>
            </div>
        }

        <hr style="margin-top: 30px; margin-bottom: 30px;" />

        @if (isRacket)
        {
            <h3>Thông số chi tiết Vợt</h3>
            <table class="racket-specs-table">
                <tbody>
                    <tr><th>Hãng</th><td id="spec-hang">@Model.SanPham.Hang.TenHang</td></tr>
                    <tr><th>Độ cứng</th><td id="spec-do-cung">@thongSoVot.DoCung</td></tr>
                    <tr><th>Điểm cân bằng</th><td id="spec-diem-can-bang">@thongSoVot.DoCanBang</td></tr>
                    <tr><th>Sức căng</th><td id="spec-suc-cang">@thongSoVot.SucCang</td></tr>
                    <tr><th>Trọng lượng</th><td id="spec-trong-luong">@thongSoVot.TrongLuong</td></tr>
                    <tr><th>Chiều dài</th><td id="spec-chieu-dai">@thongSoVot.ChieuDai</td></tr>
                </tbody>
            </table>
        }
    </div>
</div>

<div class="product-container" style="display: block; margin-top: 0;">
    <hr />
    <div class="review-list">
        <h3>Phản hồi của khách hàng (@Model.ReviewCount)</h3>
        @if (!Model.Reviews.Any())
        {
            <p>Chưa có phản hồi nào.</p>
        }
        else
        {
            foreach (var ph in Model.Reviews)
            {
                <div class="review-box">
                    <strong>Khách hàng #@ph.MaKhachHang (@ph.DanhGia sao)</strong>
                    <p>@ph.NoiDung</p>
                    <small>@ph.NgayPhanHoi</small>
                </div>
            }
        }
    </div>
</div>

<script>
    // ===================================================================
    // Dữ liệu biến thể từ Server
    // ===================================================================
    const allVariants = @Html.Raw(Json.Encode(Model.Variants.Select(v => new {
        v.MaChiTiet, v.MaMau, v.MaSize, v.GiaBan, v.SoLuongTon, v.HinhAnh,
        DoCung = v.ThongSoVots.FirstOrDefault()?.DoCung,
        DoCanBang = v.ThongSoVots.FirstOrDefault()?.DoCanBang,
        SucCang = v.ThongSoVots.FirstOrDefault()?.SucCang,
        TrongLuong = v.ThongSoVots.FirstOrDefault()?.TrongLuong,
        ChieuDai = v.ThongSoVots.FirstOrDefault()?.ChieuDai
    })));

    let selectedColorId = @(Model.AvailableColors.Any() ? Model.AvailableColors.First().MaMau : (int?)null);
    let selectedSizeId = @(Model.AvailableSizes.Any() ? Model.AvailableSizes.First().MaSize : (int?)null);

    // ===================================================================
    // 🔥 QUAN TRỌNG: Object chứa thông tin khuyến mãi để JS xử lý
    // ===================================================================
    const promotionData = {
        isActive: @(isActivePromo.ToString().ToLower()),
        percent: @(discountPercent),
        maxDiscount: @(maxDiscount) // Giá trị giảm tối đa
    };

    const isRacket = @(isRacket.ToString().ToLower());
    const defaultSoLuongTon = @(defaultVariant?.SoLuongTon ?? 0);
    const defaultChiTietId = @defaultChiTietId;

    // Hàm format tiền tệ
    const formatCurrency = (amount) => amount.toLocaleString('vi-VN') + 'đ';

    function updateProductState() {
        const variant = allVariants.find(v =>
            (!selectedColorId || v.MaMau === selectedColorId) &&
            (!selectedSizeId || v.MaSize === selectedSizeId)
        );

        const stockElement = document.getElementById('stock-status');
        const hiddenIdInput = document.getElementById('selected-chitiet-id');
        const priceElement = document.getElementById('display-price');
        const mainProductImage = document.getElementById('main-product-image');
        const badgeElement = document.getElementById('discount-badge');

        if (variant) {
            stockElement.textContent = `Còn hàng (${variant.SoLuongTon})`;
            stockElement.style.color = variant.SoLuongTon > 0 ? 'green' : 'red';
            if (variant.SoLuongTon === 0) stockElement.textContent = 'Hết hàng';

            hiddenIdInput.value = variant.MaChiTiet;

            // --- LOGIC TÍNH GIÁ ĐỘNG (CLIENT-SIDE) ---
            let finalPrice = variant.GiaBan;
            let displayPriceHtml = formatCurrency(variant.GiaBan);

            if (promotionData.isActive && promotionData.percent > 0) {
                // Tính số tiền giảm theo %
                let discountAmount = variant.GiaBan * (promotionData.percent / 100);

                // Kiểm tra trần giảm giá
                let isCapped = false;
                if (promotionData.maxDiscount > 0 && discountAmount > promotionData.maxDiscount) {
                    discountAmount = promotionData.maxDiscount;
                    isCapped = true;
                }

                finalPrice = Math.max(0, variant.GiaBan - discountAmount);
                displayPriceHtml = `${formatCurrency(finalPrice)} <span class="original-price">${formatCurrency(variant.GiaBan)}</span>`;

                // Cập nhật Badge (Nếu bị chạm trần thì hiện số tiền, ngược lại hiện %)
                if (badgeElement) {
                    if (isCapped) {
                        badgeElement.textContent = `-${formatCurrency(discountAmount)} (Max)`;
                    } else {
                        badgeElement.textContent = `-${promotionData.percent}%`;
                    }
                }
            }
            priceElement.innerHTML = displayPriceHtml;
            // ------------------------------------------

            // Cập nhật ảnh
            if (variant.HinhAnh && mainProductImage) mainProductImage.src = "/Content/images/" + variant.HinhAnh;

            // Cập nhật thông số vợt
            if (isRacket) {
                if(document.getElementById('spec-do-cung')) document.getElementById('spec-do-cung').textContent = variant.DoCung || 'N/A';
                if(document.getElementById('spec-diem-can-bang')) document.getElementById('spec-diem-can-bang').textContent = variant.DoCanBang || 'N/A';
                if(document.getElementById('spec-suc-cang')) document.getElementById('spec-suc-cang').textContent = variant.SucCang || 'N/A';
                if(document.getElementById('spec-trong-luong')) document.getElementById('spec-trong-luong').textContent = variant.TrongLuong || 'N/A';
                if(document.getElementById('spec-chieu-dai')) document.getElementById('spec-chieu-dai').textContent = variant.ChieuDai || 'N/A';
            }

        } else {
            stockElement.textContent = `Còn hàng (${defaultSoLuongTon})`;
            stockElement.style.color = defaultSoLuongTon > 0 ? 'green' : 'red';
            if (@Model.AvailableColors.Count > 0 && @Model.AvailableSizes.Count > 0) {
                stockElement.textContent = 'Biến thể không tồn tại';
                stockElement.style.color = 'red';
            }
            hiddenIdInput.value = defaultChiTietId;
            // Reset về ảnh gốc nếu không tìm thấy biến thể
            if (mainProductImage) mainProductImage.src = "@mainImageUrl";
        }
    }

    // Xử lý sự kiện click nút chọn
    document.querySelectorAll('.option-group button').forEach(button => {
        button.addEventListener('click', function(e) {
            e.preventDefault();
            const group = this.closest('.option-group');
            group.querySelectorAll('button').forEach(btn => btn.classList.remove('selected'));
            this.classList.add('selected');

            const optionType = group.dataset.option;
            if (optionType === 'color') selectedColorId = parseInt(this.dataset.colorId);
            else if (optionType === 'size') selectedSizeId = parseInt(this.dataset.sizeId);

            updateProductState();
        });
    });

    // Auto chọn option đầu tiên
    if (@Model.AvailableColors.Count > 0) document.querySelector('#color-options button:first-child')?.click();
    if (@Model.AvailableSizes.Count > 0) document.querySelector('#weight-options button:first-child')?.click();

    updateProductState();
</script>