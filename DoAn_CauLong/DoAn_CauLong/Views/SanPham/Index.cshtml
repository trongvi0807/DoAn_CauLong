@model List<DoAn_CauLong.Models.SanPham>

@{
    ViewBag.Title = "Danh sách sản phẩm";
}

<style>
    /* Container */
    .product-list {
        margin-top: 20px;
    }

    /* Card */
    .product-card {
        border: 0;
        border-radius: 12px;
        overflow: hidden;
        background: #ffffff;
        transition: transform .15s ease, box-shadow .15s ease;
        box-shadow: 0 1px 6px rgba(20,20,20,0.06);
        display: flex;
        flex-direction: column;
        height: 100%;
        position: relative; /* for badge */
    }

    .product-card:hover {
        transform: translateY(-6px);
        box-shadow: 0 12px 30px rgba(18,18,18,0.08);
    }

    /* Image */
    .card-img-top {
        width: 100%;
        height: 180px;
        object-fit: contain;
        background: linear-gradient(180deg, #fbfbfb 0%, #f7f7f7 100%);
        padding: 12px;
        display: block;
    }

    /* Card body layout */
    .card-body {
        padding: 12px;
        display: flex;
        flex-direction: column;
        gap: 8px;
    }

    /* Title and description */
    .product-title {
        font-size: 14px;
        font-weight: 600;
        min-height: 40px;
        line-height: 1.2;
        margin-bottom: 4px;
        display: -webkit-box;
        -webkit-line-clamp: 2; /* 2 lines */
        -webkit-box-orient: vertical;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    .product-brand {
        font-size: 13px;
        color: #6b6b6b;
        min-height: 36px;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }

    /* Price & badge */
    .product-footer {
        margin-top: auto;
        display: flex;
        align-items: center;
        justify-content: space-between;
        gap: 8px;
    }

    .product-price {
        color: #e65100;
        font-weight: 800;
        font-size: 16px;
    }

    .price-small {
        font-size: 13px;
        color: #888;
        text-decoration: line-through;
        margin-left: 6px;
    }

    .badge-out {
        background: #e0e0e0;
        color: #333;
        font-size: 12px;
        padding: 4px 8px;
        border-radius: 999px;
    }

    .promo-badge-small {
        position: absolute;
        top: 8px;
        left: 8px;
        background: #d32f2f;
        color: #fff;
        padding: 6px 10px;
        border-radius: 12px;
        font-weight: 700;
        font-size: 11px;
        box-shadow: 2px 2px 5px rgba(0,0,0,0.2);
        z-index: 2;
    }

    /* Responsive tweaks */
    @@media (max-width: 576px) {
        .card-img-top {
            height: 160px;
        }
    }
</style>

<div class="container">
    <h2 class="mt-3">@ViewBag.Title</h2>

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-info mt-3">Không có sản phẩm phù hợp.</div>
    }
    else
    {
        <div class="row product-list gx-3 gy-4">
            @foreach (var sp in Model)
            {
                // =========================================================
                // LOGIC TÍNH GIÁ KHUYẾN MÃI (Giống Controller)
                // =========================================================
                decimal giaGoc = sp.GiaGoc ?? 0m;
                decimal giaBanHienTai = giaGoc;
                bool dangKhuyenMai = false;
                string badgeText = "";
                string noteGiamGia = ""; // Biến lưu ghi chú nếu bị giới hạn giá giảm

                if (sp.KhuyenMai != null)
                {
                    DateTime now = DateTime.Now;
                    DateTime? start = sp.KhuyenMai.NgayBatDau;
                    DateTime? end = sp.KhuyenMai.NgayKetThuc;

                    // Fix lỗi 00:00:00 của ngày kết thúc (cho phép đến hết ngày)
                    if (end.HasValue && end.Value.TimeOfDay == TimeSpan.Zero)
                    {
                        end = end.Value.Date.AddDays(1).AddTicks(-1);
                    }

                    // 1. Kiểm tra thời hạn
                    if ((start == null || start <= now) && (end == null || end >= now))
                    {
                        dangKhuyenMai = true;
                        decimal phanTram = sp.KhuyenMai.PhanTramGiam ?? 0;
                        decimal tienGiam = giaGoc * (phanTram / 100);
                        decimal? giamToiDa = sp.KhuyenMai.GiamToiDa;

                        // 2. Kiểm tra giảm tối đa
                        if (giamToiDa.HasValue && giamToiDa > 0 && tienGiam > giamToiDa.Value)
                        {
                            // Nếu giảm vượt quá mức trần, chỉ giảm bằng mức trần
                            tienGiam = giamToiDa.Value;

                            // Badge hiển thị số tiền giảm trực tiếp thay vì % vì % lúc này ko còn đúng
                            badgeText = "-" + tienGiam.ToString("N0") + "đ";
                            noteGiamGia = "(Tối đa " + giamToiDa.Value.ToString("N0") + "đ)";
                        }
                        else
                        {
                            // Giảm bình thường theo %
                            badgeText = "-" + phanTram + "%";
                        }

                        giaBanHienTai = giaGoc - tienGiam;
                    }
                }
                // =========================================================

                <div class="col-6 col-sm-6 col-md-4 col-lg-3">
                    <div class="product-card card h-100">

                        @* Hiển thị Badge Khuyến Mãi (Chỉ khi còn hạn) *@
                        @if (dangKhuyenMai)
                        {
                            <div class="promo-badge-small">
                                @badgeText
                            </div>
                        }

                        <a href="@Url.Action("ChiTietSanPham", "Home", new { id = sp.MaSanPham })" class="d-block">
                            <img class="card-img-top"
                                 src="@Url.Content("~/Content/images/" + (string.IsNullOrEmpty(sp.HinhAnhDaiDien) ? "default-product.jpg" : sp.HinhAnhDaiDien))"
                                 alt="@sp.TenSanPham"
                                 onerror="this.src='@Url.Content("~/Content/images/default-product.jpg")'" />
                        </a>

                        <div class="card-body">
                            <a href="@Url.Action("ChiTietSanPham", "Home", new { id = sp.MaSanPham })" style="text-decoration:none;color:inherit;">
                                <div class="product-title" title="@sp.TenSanPham">@sp.TenSanPham</div>
                            </a>

                            <div class="product-brand">@sp.MoTa</div>

                            <div class="product-footer">
                                <div style="display:flex; flex-direction:column; align-items:flex-start;">
                                    @if (sp.GiaGoc.HasValue)
                                    {
                                        <div>
                                            @* Giá bán thực tế *@
                                            <span class="product-price">@giaBanHienTai.ToString("N0")đ</span>

                                            @* Giá gốc gạch ngang (nếu có khuyến mãi) *@
                                            @if (dangKhuyenMai)
                                            {
                                                <span class="price-small">@giaGoc.ToString("N0")đ</span>
                                            }
                                        </div>

                                        @* Dòng chú thích nhỏ nếu bị giới hạn giảm giá *@
                                        if (!string.IsNullOrEmpty(noteGiamGia))
                                        {
                                            <small style="font-size:10px; color:#d32f2f;">@noteGiamGia</small>
                                        }
                                    }
                                    else
                                    {
                                        <div class="product-price">Liên hệ</div>
                                    }
                                </div>

                                @* Kiểm tra tồn kho (Optional) *@
                                @{
                                    // Kiểm tra reflection an toàn hơn
                                    var propSoLuong = sp.GetType().GetProperty("SoLuong");
                                }
                                @if (propSoLuong != null)
                                {
                                    var val = propSoLuong.GetValue(sp, null);
                                    int sl = 0;
                                    if (val != null) { int.TryParse(val.ToString(), out sl); }

                                    if (sl <= 0)
                                    {
                                        <div class="badge-out">Hết hàng</div>
                                    }
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>