<div class="container">
    <h2 class="mt-4 mb-4 text-center text-primary">Danh Sách Sản Phẩm: @ViewBag.TenLoai</h2>
    <hr class="mb-5" />

    @if (Model != null && Model.Any())
    {
        <div class="row">
            @foreach (var item in Model)
            {
                // compute discount if any
                var discountPercent = item.KhuyenMai?.PhanTramGiam ?? 0m;
                var oldPrice = item.GiaGoc ?? 0m;
                var discountedPrice = oldPrice;
                if (discountPercent > 0)
                {
                    discountedPrice = Math.Max(0, oldPrice - (oldPrice * discountPercent / 100));
                }

                <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
                    @* Thêm data-url để JS có thể lấy link chi tiết *@
                    <div class="card h-100 product-card"
                         data-url="@Url.Action("ChiTietSanPham", "Home", new { id = item.MaSanPham })">

                        @if (discountPercent > 0)
                        {
                            <div class="promo-badge-small">Giảm @discountPercent% </div>
                        }

                        <a href="@Url.Action("ChiTietSanPham", "Home", new { id = item.MaSanPham })">
                            <img class="card-img-top"
                                 src="@Url.Content($"~/Content/images/{item.HinhAnhDaiDien}")"
                                 alt="@item.TenSanPham">
                        </a>

                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">
                                @* Giữ link trên tên sản phẩm phòng trường hợp JS không hoạt động *@
                                <a href="@Url.Action("ChiTietSanPham", "Home", new { id = item.MaSanPham })">
                                    @item.TenSanPham
                                </a>
                            </h5>

                            <div class="price-block mt-auto">
                                @if (discountPercent > 0)
                                {
                                    <span class="current-price">@string.Format("{0:N0}", discountedPrice) đ</span>
                                    <span class="original-price">@string.Format("{0:N0}", oldPrice) đ</span>
                                }
                                else
                                {
                                    <span class="current-price">@string.Format("{0:N0}", oldPrice) đ</span>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="alert alert-warning text-center" role="alert">
            <i class="fa fa-info-circle"></i> Hiện tại không có sản phẩm nào thuộc loại **@ViewBag.TenLoai** này.
        </div>
    }
</div>

@section scripts {
    <script>
        // SCRIPT ĐỂ TOÀN BỘ CARD CÓ THỂ CLICK ĐƯỢC
        $(document).ready(function () {
            // Lắng nghe sự kiện click trên tất cả các card sản phẩm
            $('.product-card').on('click', function () {
                // Lấy URL từ thuộc tính data-url
                var detailUrl = $(this).data('url');

                if (detailUrl) {
                    // Chuyển hướng trình duyệt đến URL đó
                    window.location.href = detailUrl;
                }
            });

            // Ngăn chặn sự kiện click lan truyền khi click vào link chi tiết bên trong card
            // Đảm bảo chỉ khi click vào thẻ chính mới chuyển hướng
            $('.product-card a').on('click', function (e) {
                e.stopPropagation();
            });
        });
    </script>
}