@model DoAn_CauLong.Models.KhachHang
@{
    ViewBag.Title = "Thông tin tài khoản";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container" style="padding: 20px;">
    <h2>@ViewBag.Title</h2>
    <hr />

    <div class="form-horizontal">
        <div class="form-group">
            <label class="col-sm-2 control-label"<strong>Họ và Tên:</strong></label>
            <div class="col-sm-10">
                <p class="form-control-static">@Html.DisplayFor(m => m.HoTen)</p>
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-2 control-label"><strong>Email:</strong></label>
            <div class="col-sm-10">
                <p class="form-control-static">@Html.DisplayFor(m => m.Email)</p>
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-2 control-label"><strong>Số điện thoại:</strong></label>
            <div class="col-sm-10">
                <p class="form-control-static">@Html.DisplayFor(m => m.SoDienThoai)</p>
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-2 control-label"><strong>Địa chỉ:</strong></label>
            <div class="col-sm-10">
                <p class="form-control-static">@Html.DisplayFor(m => m.DiaChi)</p>
            </div>
        </div>

        <div class="form-group">
            <label class="col-sm-2 control-label"><strong>Ngày tạo:</strong></label>
            <div class="col-sm-10">
                <p class="form-control-static">@(Model.NgayTao?.ToString("dd/MM/yyyy HH:mm"))</p>
            </div>
        </div>

    </div>
</div>